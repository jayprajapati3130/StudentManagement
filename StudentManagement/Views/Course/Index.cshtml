@model IEnumerable<StudentManagement.Models.course>


@{
    ViewBag.Title = "Index";
    @ViewBag.Message
}

<h2>Course List</h2>
<h2>@ViewBag.Message</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr style="background-color:#080a45 ; color:white">
        <th>
            Course
        </th>
        <th>
            @Html.DisplayNameFor(model => model.duration)
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="background-color: #ffb3ff">
            <td>
                @Html.DisplayFor(modelItem => item.course1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.duration)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @style = "color:#00FF00;" }) |
                @* @Html.ActionLink("Details", "Details", new { id=item.id }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @style = "color:#ed2a1c;" })
            </td>
        </tr>
    }


</table>
